<Alloy>
	<Window id="window" class="container">
		<View layout="vertical">
			<View width="100%" top="0" id="titleBar">
				<ImageView id="btnCancel" class="titleBack" width="auto" height="24" image="/images/left_arrow.png"></ImageView>
				<Label id="title" class="titleText">Transition to Computer</Label>
			</View>
			<View width="100%" top="0" id="titleView">
				<View class="screen" layout="vertical">
					<View class="br" />
					<Label class="lblText">Now, that you have completed all the lessons, you are ready to start programming on a computer.  Go to the link below in your computer's browser for a guide to get started!</Label>
					<View class="br" formFactor="tablet" />
					<ImageView width="auto" height="300" image="/images/computer.png" />
					<View left="0" layout="horizontal">
						<Label id="lblLink" class="lblLink" />
					</View>
				</View>
			</View>
		</View>
	</Window>
</Alloy>
