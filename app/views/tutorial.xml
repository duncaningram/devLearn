<Alloy>
	<Window class="container">
		<ScrollableView id="scrollable">
			<View>
				<View class="tutorialImageView" layout="vertical">
					<ImageView image="/images/logo.png" />
					<Label class="subheading">Swipe right to get started \u2192</Label>
				</View>
			</View>
			<View>
				<View class="tutorialHeartView" layout="vertical">
					<Label></Label>
					<Label></Label>
					<ImageView image="/images/hearts.png" />
					<Label></Label>
					<Label class="subheading">Finish each lesson before you run out of lives!</Label>
				</View>
			</View>
			<View>
				<View class="tutorialImageView" layout="vertical">
					<ImageView id="imgPoint" image="/images/point.png" />
					<Label></Label>
					<Label class="subheading">Complete questions and earn points!</Label>
				</View>
			</View>
		</ScrollableView>
		<View id="progressIndicator" width="Ti.UI.SIZE" height="Ti.UI.SIZE" layout="horizontal">
			<ImageView class="imgTicks" id="imgPage1" image="/images/ring_full.png" />
			<ImageView class="imgTicks" id="imgPage2" image="/images/ring.png" />
			<ImageView class="imgTicks" id="imgPage3" image="/images/ring.png" />
		</View>
		<View class="flatButton" id="btnNewUser"><Label class="lblFlatButton">New User</Label></View>
		<View class="flatButton" id="btnExistingUser"><Label class="lblFlatButton">Existing User</Label></View>
	</Window>
</Alloy>