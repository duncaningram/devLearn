<Alloy>
	<Window class="container">
		<View layout="vertical">
			<View width="100%" top="0" id="titleBar">
				<ImageView id="btnCancel" class="titleBack" width="auto" height="24" image="/images/left_arrow.png"></ImageView>
				<Label id="title" class="titleText">Sign Up</Label>
			</View>
			<View id="information" layout="vertical" width="80%">
				<Label class="subheading">Name</Label>
				<TextField width="100%" hintText="First Name" id="txtFname" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<TextField width="100%" hintText="Last Name" id="txtLname" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<View height="20"></View>
				<Label class="subheading">Account</Label>
				<View height="10"></View>
				<TextField width="100%" autocapitalization="Ti.UI.TEXT_AUTOCAPITALIZATION_NONE" hintText="Email" id="txtEmail" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<TextField width="100%" autocapitalization="Ti.UI.TEXT_AUTOCAPITALIZATION_NONE" hintText="Password" id="txtPassword" passwordMask="true" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<TextField width="100%" hintText="Confirm Password" id="txtPasswordConfirm" passwordMask="true" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<View height="30"></View>
				<View layout="horizontal" width="100%" height="50">
					<View class="half"><View class="flatButton" id="btnSignUp" layout="horizontal"><Label class="lblFlatButton">Sign Up</Label></View></View>
					<View class="half"><View class="flatButton" id="btnGuest" layout="horizontal"><Label class="lblFlatButton">Skip</Label></View></View>
				</View>
			</View>
		</View>
	</Window>
</Alloy>

