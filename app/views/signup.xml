<Alloy>
	<Window class="container">
		<View>
			<View layout="vertical" height="450" width="100%">
	            <View layout="horizontal" height="35" width="300">
					<Label width="75" left="10">Email:</Label>
					<TextField width="180" hintText="user@email.com" id="txtEmail" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				</View>
				<View layout="horizontal" height="35" width="300">
					<Label width="75" left="10">Password:</Label>
					<TextField width="180" id="txtPassword" passwordMask="true" borderSyle="TI.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				</View>
				<View layout="horizontal" height="35" width="300">
					<Label width="75" left="10">Confirm Password:</Label>
					<TextField width="180" id="txtPasswordConfirm" passwordMask="true" borderSyle="TI.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				</View>
				<View layout="horizontal" height="35" width="300">
					<Label width="75" left="10">First Name:</Label>
					<TextField width="180" hintText="First Name" id="txtFname" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				</View>
				<View layout="horizontal" height="35" width="300">
					<Label width="75" left="10">Last Name:</Label>
					<TextField width="180" hintText="Last Name" id="txtLname" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				</View>
				<View height="10"></View>
				<View height="30" class="flatButton" bottom="50" id="btnSignUp"><Label class="lblFlatButton">Sign Up</Label></View>
			</View>
		</View>
	</Window>
</Alloy>
