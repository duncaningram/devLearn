<Alloy>
	<Window class="container">
		<View>
			<View id="information" layout="vertical" width="80%">
				<Label class="subheading">Name</Label>
				<TextField width="100%" hintText="First Name" id="txtFname" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<TextField width="100%" hintText="Last Name" id="txtLname" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<View height="20"></View>
				<Label class="subheading">Account</Label>
				<View height="10"></View>
				<TextField width="100%" hintText="Email" id="txtEmail" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<TextField width="100%" hintText="Password" id="txtPassword" passwordMask="true" borderSyle="TI.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<TextField width="100%" hintText="Confirm Password" id="txtPasswordConfirm" passwordMask="true" borderSyle="TI.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<View height="30"></View>
				<View layout="horizontal" width="330" height="50">
					<View class="flatButton" id="btnSignUp"><Label class="lblFlatButton">Sign Up</Label></View>
					<View width="30"></View>
					<View class="flatButton" id="btnGuest"><Label class="lblFlatButton">Guest</Label></View>
				</View>
				
			</View>
		</View>
	</Window>
</Alloy>
