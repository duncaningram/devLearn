<Alloy>
	<Window class="container">
		<View layout="vertical">
			<View width="100%" top="0" id="titleBar">
				<ImageView id="btnCancel" class="titleBack" width="auto" height="24" image="/images/left_arrow.png"></ImageView>
				<Label id="title" class="titleText">Sign In</Label>
			</View>
			<View layout="vertical" height="450" width="80%">
				<View height="30"></View>
				<TextField width="100%" autocapitalization="Ti.UI.TEXT_AUTOCAPITALIZATION_NONE" hintText="Email" id="txtEmail" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<TextField width="100%" autocapitalization="Ti.UI.TEXT_AUTOCAPITALIZATION_NONE" hintText="Password" id="txtPassword" passwordMask="true" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<View height="30"></View>
				<View class="flatButton" bottom="70" id="btnSignIn"><Label class="lblFlatButton">Sign In</Label></View>
			</View>
		</View>
	</Window>
</Alloy>
